<ol class="post-list">
    {{#each posts}}
    <ul>
        <article class="post">
            <div class="title">
                <a href="/post/{{id}}">{{title}}</a>
            </div>
            <div class="meta">
                Posted by: {{user.username}} on
                {{created_at}}
                |
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </ul>
    {{/each}}
</ol>